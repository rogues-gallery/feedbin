<div class="tweet-wrap system-content">
    <div class="tweet quoted-tweet">
        <header class="tweet-header">
            <div class="profile-wrap">
                <div class="profile-image-wrap">
                    <%= link_to media.permalink, target: "_blank", title: "View on Instagram", class: "tweet-link embed" do %>
                        <%= svg_tag "icon-instagram" %>
                    <% end %>
                </div>
                <div class="profile-info">
                    <h1>
                        <a href="<%= media.permalink %>" target="_blank" class="link">
                            <strong><%= media.screen_name %></strong>
                        </a>
                    </h1>
                </div>
            </div>
        </header>
        <div class="tweet-body">
            <a href="<%= media.media_url %>"><img src="<%= camo_link(media.media_url) %>"></a>
        </div>
    </div>
</div>
