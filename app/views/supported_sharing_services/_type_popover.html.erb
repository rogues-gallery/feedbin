<div class="service-header">
    <%= render partial: "supported_sharing_services/header", locals: {sharing_service: sharing_service} %>
    <div class="last-control button-wrap-inline">
        <% if status == :active %>
            <%= render partial: "supported_sharing_services/delete_supported_service", locals: {sharing_service: sharing_service} %>
        <% else %>
            <%= link_to 'Activate', supported_sharing_services_path(supported_sharing_service: {service_id: sharing_service.service_id }), class: 'button button-secondary', method: :post %>
        <% end %>
    </div>
</div>
