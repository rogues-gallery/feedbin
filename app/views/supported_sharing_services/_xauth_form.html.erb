<div class="service-options-wrap">
    <div class="service-options">
        <%= form_for(record) do |f| %>
            <%= f.hidden_field :service_id, value: sharing_service.service_id %>
            <%= f.hidden_field :operation, value: 'authorize' %>
            <div class="stacked-form">
                <div class="input-group-wrap">
                    <label for="<%= sharing_service.service_id %>_username">Username</label>
                    <%= render "shared/input" do %>
                        <% text_field_tag 'username', '', id: "#{sharing_service.service_id}_username" %>
                    <% end %>
                </div>
                <div class="input-group-wrap">
                    <label for="<%= sharing_service.service_id %>_password">Password</label>
                    <%= render "shared/input" do %>
                        <% password_field_tag 'password', '', id: "#{sharing_service.service_id}_password" %>
                    <% end %>
                </div>
            </div>
            <div class="button-wrap">
                <%= button_tag 'Cancel', type: "button", class: 'button button-tertiary', data: {behavior: "toggle_service_options"} %>
                <%= button_tag "Save", type: "submit", class: "button" %>
            </div>
        <% end %>
    </div>
</div>
