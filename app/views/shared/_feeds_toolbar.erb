<div class="bottom-toolbar feed-toolbar">
    <div class="toolbar-inner">
        <a class="toolbar-button edit-button" disabled="disabled" data-behavior="open_settings_modal feed_settings" data-remote="true" href="" data-modal-target="">
            <div class="toolbar-button-inner">
                <%= svg_tag "icon-edit" %>
            </div>
            <span>Edit</span>
        </a>

        <div class="toolbar-button add-button" data-behavior="show_subscribe open_modal" data-modal-target="subscribe">
            <div class="toolbar-button-inner">
                <%= svg_tag "icon-add" %>
            </div>
            <span>Add</span>
        </div>

        <div class="toolbar-button" disabled="disabled" data-behavior="mark_all_as_read">
            <div class="toolbar-button-inner">
                <%= svg_tag "icon-mark-read" %>
            </div>
            <span>Read</span>
        </div>
    </div>
</div>
